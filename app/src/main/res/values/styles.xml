<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Button Styles-->
    <style name="PrimaryButtonLarge.Filled" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginHorizontal">@dimen/size_margin_16dp</item>
        <item name="android:padding">@dimen/size_padding_15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonMedium" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>

        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    TextView styles-->
    <style name="WalkThroughTitle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="WalkThroughContent" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="AuthScreenTitles" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/zircon</item>
        <item name="android:textColorHint">@color/heather</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="RequiredFieldWarning" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/size_padding_4dp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>
</resources>