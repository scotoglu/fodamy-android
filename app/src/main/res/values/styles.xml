<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button Styles-->
    <style name="PrimaryButtonLarge.Filled" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/size_margin_16dp
        </item>
        <item name="android:padding">@dimen/size_padding_15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonLarge.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/corner_radius_15dp</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:padding">@dimen/size_padding_8dp</item>
        <item name="android:textColor">@color/cinder</item>
    </style>


    <style name="PrimaryButtonMedium" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/size_padding_15dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/size_padding_8dp</item>
        <item name="background">@drawable/btn_follow_background</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="PrimaryButtonSmall.Filled" parent="Widget.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/size_margin_16dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/size_margin_8dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">0dp</item>

    </style>

    <style name="RetryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    TextView styles-->
    <style name="WalkThroughTitle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="WalkThroughContent" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_content</item>
    </style>

    <style name="AuthScreenTitles" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/cinder</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/zircon</item>
        <item name="android:textColorHint">@color/heather</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="RequiredFieldWarning" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/size_padding_4dp</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <style name="ListTextStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
    </style>

    <!--    BottomSheetFragmetn-->
    <style name="TransparentBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
</resources>