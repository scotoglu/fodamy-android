<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Button Styles-->
    <style name="PrimaryButtonLarge" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonMedium" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">162dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonSmall" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">?colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">120dp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--    TextView styles-->
    <style name="WalkThroughTitle" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WalkThroughContent" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_content</item>
    </style>
</resources>