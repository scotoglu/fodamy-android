<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.scoto.fodamy.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_recipeDetailsFragment"
            app:destination="@id/recipeDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagesOfTab"
        android:name="com.scoto.fodamy.ui.home.pages.PagesOfTab"
        android:label="PagesOfTab" />
    <fragment
        android:id="@+id/recipeDetailsFragment"
        android:name="com.scoto.fodamy.ui.favorites.recipe_details.RecipeDetailsFragment"
        android:label="RecipeDetailsFragment" >
        <action
            android:id="@+id/action_recipeDetailsFragment_to_authDialog"
            app:destination="@id/authDialog" />
        <action
            android:id="@+id/action_recipeDetailsFragment_to_unfollowDialog"
            app:destination="@id/unfollowDialog" />
        <argument
            android:name="RECIPE"
            app:argType="com.scoto.fodamy.network.models.Recipe" />
    </fragment>
    <dialog
        android:id="@+id/authDialog"
        android:name="com.scoto.fodamy.ui.dialog.AuthDialog"
        android:label="AuthDialog" >
        <action
            android:id="@+id/action_authDialog_to_loginFragment"
            app:destination="@id/loginFragment" />
    </dialog>
    <dialog
        android:id="@+id/unfollowDialog"
        android:name="com.scoto.fodamy.ui.dialog.UnfollowDialog"
        android:label="UnfollowDialog" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.scoto.fodamy.ui.auth.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.scoto.fodamy.ui.auth.signup.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.scoto.fodamy.ui.auth.reset_password.ResetPasswordFragment"
        android:label="ResetPasswordFragment" />
</navigation>